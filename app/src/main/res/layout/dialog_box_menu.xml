<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customtv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="2dp"
    android:layout_gravity="center"
    android:background="@mipmap/gfg_grass">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="10dp">

        <com.sharmas.golf_android.common.CustomTextView
            android:id="@+id/tv_update_emails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/background_drawable"
            android:gravity="center"
            android:padding="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="UPDATE EMAIL"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            customtv:fontType="4" />

        <com.sharmas.golf_android.common.CustomTextView
            android:id="@+id/tv_update_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_update_emails"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/background_drawable"
            android:gravity="center"
            android:padding="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="UPDATE PASSWORD"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            customtv:fontType="4" />

        <com.sharmas.golf_android.common.CustomTextView
            android:id="@+id/tv_membership"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_update_pwd"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/background_drawable"
            android:gravity="center"
            android:padding="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="MY MEMBERSHIP"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            customtv:fontType="4" />

        <com.sharmas.golf_android.common.CustomTextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_membership"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/background_drawable"
            android:gravity="center"
            android:padding="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="SHARE"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            customtv:fontType="4" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_share"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@mipmap/facebook_circle"
            android:visibility="gone" />

        <com.sharmas.golf_android.common.CustomTextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/background_drawable"
            android:gravity="center"
            android:padding="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="LOGOUT"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            customtv:fontType="4" />
    </RelativeLayout>

</FrameLayout>